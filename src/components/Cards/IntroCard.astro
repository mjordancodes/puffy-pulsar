---
import { AUTHOR_NAME, JOB_COMPANY, JOB_TITLE, JOB_URL } from "../../config";
---

<div id="intro-card" class="theme-rainbow">
  <img
    id="profile-picture"
    src="/jordan.png"
    alt="stylized illustration of female with brown hair and blue glasses"
  />
  <h1 id="author-name">{AUTHOR_NAME}</h1>
  <div id="facts">
    <ul>
      <li class="website">
        <span>Website:</span>
        <a href="https://mjordan.codes">mjordan.codes</a>
      </li>
      <li class="pronouns">
        <span>Pronouns:</span>
        <span>she/her</span>
      </li>
      <li class="job">
        <span>{JOB_TITLE}</span> at <a
          href={JOB_URL}
          target="_blank"
          rel="noopener noreferrer">{JOB_COMPANY}</a
        >
      </li>
      <li class="volunteer">
        <span>Director</span> at <a
          href="https://www.womenwhocode.com/boulder-denver/about"
          target="_blank"
          rel="noopener noreferrer">Women Who Code Boulder/Denver</a
        >
      </li>
    </ul>
  </div>
</div>

<style lang="scss">
  #intro-card {
    border: 1px solid black;
    font-family: var(--font_body_family);
    font-size: var(--font_body_size);
    background: var(--card_background);
    background-size: var(--card_background-size);
    animation: var(--card_animation);
    display: grid;
    grid-template-rows: 200px 1fr;
    grid-template-areas:
      "img"
      "name"
      "facts";
    #profile-picture {
      grid-area: img;
      max-width: 100%;
      max-height: 100%;
      margin: 0 auto;
      padding-top: 10px;
      align-self: end;
    }
    #author-name {
      grid-area: name;
      margin: 0 0 20px;
      text-align: center;
      font-family: var(--font_headings_family);
      font-size: var(--font_headings_size);
    }
    #facts {
      grid-area: facts;
      padding: 10px;
      ul {
        list-style-type: none;
        padding: 0;
        margin: 0;
        .job,
        .volunteer {
          span,
          a {
            font-weight: bold;
          }
        }
      }
    }
  }

  @media screen and (min-width: 600px) {
    #intro-card {
      grid-template-rows: auto 1fr;
      grid-template-columns: 1fr 2fr;
      grid-template-areas:
        "img name"
        "img facts";
      width: clamp(600px, 75%, 750px);
    }
  }

  @mixin gradientText {
    background: var(--color_gradient);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
  }
  #intro-card.theme-rainbow {
    border: none;
    #author-name {
      @include gradientText;
      border-bottom: 10px solid var(--color_accent);
      text-shadow: 4px 4px 0 white, 8px 8px 0 black;
      margin: 10px;
    }
    #facts {
      ul {
        background: white;
        padding: 15px 15px 10px;
        li {
          padding-bottom: 5px;
        }
        .job,
        .volunteer {
          span {
            @include gradientText;
          }
        }
      }
    }
  }
</style>
